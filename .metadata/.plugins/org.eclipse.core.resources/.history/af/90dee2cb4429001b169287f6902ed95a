<html>
<head>
		<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<title>상품목록</title>
		<style>
			#divList{width:800px;}
			.box{width:200px; background:gray; color:white; float:left; margin:5px;padding:10px;height:240px;}
			.active{color:red;}
		</style>
</head>
<body>
	<h1>[상품목록]</h1>
	<form name="frm">
		<input type="hidden" name="page" value="1">
		<select name="searchType">
			<option value="pname">상품명</option>
			<option >상품가격</option>
			
		</select>
		<input type="radio" >이상 
		<input type="radio">이하
		<input type="text" name="keyword" size=10 value="${pm.cri.keyword}">
		<input type="submit" value="검 색">
	</form>
	<div id="divList">
		<c:forEach items="${list }" var="vo">
			<div class="box">
				<img src="display?fileName=${vo.image}" width=150>
				<div>${vo.pname }</div>
				<div>${vo.price }원</div>
			</div>
		</c:forEach>
	</div>
	<div id="pagination">
      <c:if test="${pm.prev}">
         <a href="${pm.startPage-1}">◀</a>
      </c:if>
      <c:forEach begin="${pm.startPage}" end="${pm.endPage}" var="i">
         <c:if test="${pm.cri.page==i}">
            [<a href="${i}" class="active">${i}</a>]
         </c:if>   
         <c:if test="${pm.cri.page!=i}">
            [<a href="${i}">${i}</a>]
         </c:if>
      </c:forEach>
      <c:if test="${pm.next}">
         <a href="${pm.endPage+1}">▶</a>
      </c:if>
   </div>
</body>
<script>
$("#pagination a").click(function(e){
	e.preventDefault();
	$(frm.page).val($(this).attr("href"));
	frm.submit();
});
</script>
